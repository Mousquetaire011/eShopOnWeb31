@model Microsoft.eShopWeb.Web.ViewModels.BankingOperationViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="alert-info" style="padding: 40px">

    <h4>New Banking Operations</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.orders" class="control-label"></label>
                    <select asp-for="@Model.banking.SelectedOrderId" asp-items="@Model.orders" class="form-control">
                    </select>
                    <span asp-validation-for="@Model.orders" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.banking.OperationLabel" class="control-label"></label>
                    <input asp-for="@Model.banking.OperationLabel" class="form-control" />
                    <span asp-validation-for="@Model.banking.OperationLabel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.banking.Credit" class="control-label"></label>
                    <input asp-for="@Model.banking.Credit" class="form-control" />
                    <span asp-validation-for="@Model.banking.Credit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.banking.Debit" class="control-label"></label>
                    <input asp-for="@Model.banking.Debit" class="form-control" />
                    <span asp-validation-for="@Model.banking.Debit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.banking.OperationDate" class="control-label"></label>
                    <input asp-for="@Model.banking.OperationDate" class="form-control" />
                    <span asp-validation-for="@Model.banking.OperationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.banking.BankingDate" class="control-label"></label>
                    <input asp-for="@Model.banking.BankingDate" class="form-control" />
                    <span asp-validation-for="@Model.banking.BankingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
